{
  "manifest_version": 3,
  "name": "Youtube Subtitle Info",
  "description": "Showing information about available subtitles for each video recommended on the main page.",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16px.png",
    "32": "images/icon-32px.png",
    "48": "images/icon-48px.png",
    "128": "images/icon-128px.png"
  },
  "action": {
    "default_icon": {
        "16": "images/icon-16px.png",
        "32": "images/icon-32px.png",
        "48": "images/icon-48px.png",
        "128": "images/icon-128px.png"
    }
  },
  "background": {
    "service_worker": "scripts/addSubtitleInfo.js"
  },
  "permissions": ["activeTab", "scripting"]
}